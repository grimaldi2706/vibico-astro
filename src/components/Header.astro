---
import config from "../config.json";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t =
  config.languages[lang as keyof typeof config.languages] ||
  config.languages.es;

interface NavigationItem {
  label: string;
  href: string;
  subitems?: { label: string; href: string }[];
}

const navigation = t.navigation as NavigationItem[];

const getPath = (path: string) => {
  const base = import.meta.env.BASE_URL.replace(/\/$/, "");
  return path === "/" ? base || "/" : `${base}${path}`;
};

const targetLang = lang === "es" ? "en" : "es";
const targetLabel = lang === "es" ? "EN" : "ES";
const targetHref = getPath(lang === "es" ? "/en" : "/");
const logoSrc = getPath(config.common.logo);
---

<header
  class="bg-white/80 backdrop-blur-md shadow-sm sticky top-0 z-50 print:hidden"
>
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a
      href={getPath(lang === "es" ? "/" : `/${lang}`)}
      class="flex items-center gap-3 text-2xl font-bold text-primary tracking-tighter hover:scale-105 transition-transform"
    >
      <img
        src={logoSrc}
        alt="VIBICO Logo"
        class="h-14 w-auto rounded-full shadow-sm"
      />
      <span>{t.site.logoText}</span>
    </a>

    <div class="hidden md:flex items-center space-x-6">
      <nav class="flex space-x-6">
        {
          navigation.map((item) => (
            <div class="relative group">
              <a
                href={getPath(item.href)}
                class="text-gray-600 hover:text-primary font-medium transition-colors flex items-center gap-1"
              >
                {item.label}
                {item.subitems && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 transition-transform group-hover:rotate-180"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                )}
              </a>
              {item.subitems && (
                <div class="absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform origin-top-left z-50">
                  <div class="py-1">
                    {item.subitems.map((subitem) => (
                      <a
                        href={getPath(subitem.href)}
                        class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-primary"
                      >
                        {subitem.label}
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ))
        }
      </nav>

      <a
        href={targetHref}
        class="px-3 py-1 rounded-full border border-gray-300 text-sm font-semibold text-gray-600 hover:bg-primary hover:text-white hover:border-primary transition-all"
        aria-label={`Switch to ${targetLabel}`}
      >
        {targetLabel}
      </a>
    </div>

    <button
      id="mobile-menu-btn"
      class="md:hidden text-gray-600 focus:outline-none"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-white border-t border-gray-100 absolute w-full left-0 shadow-lg"
  >
    <nav class="flex flex-col p-4 space-y-3">
      {
        navigation.map((item) => (
          <div>
            <a
              href={getPath(item.href)}
              class="text-gray-600 hover:text-primary font-medium block flex justify-between items-center"
            >
              {item.label}
            </a>
            {item.subitems && (
              <div class="pl-4 mt-2 space-y-2 border-l-2 border-gray-100">
                {item.subitems.map((subitem) => (
                  <a
                    href={getPath(subitem.href)}
                    class="text-gray-500 hover:text-primary text-sm block"
                  >
                    {subitem.label}
                  </a>
                ))}
              </div>
            )}
          </div>
        ))
      }
      <a
        href={targetHref}
        class="text-gray-600 hover:text-primary font-medium block pt-2 border-t border-gray-100 mt-2"
      >
        Cambiar a {targetLabel}
      </a>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");

  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });
</script>
