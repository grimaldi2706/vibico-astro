---
import config from "../config.json";
const year = new Date().getFullYear();

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t =
  config.languages[lang as keyof typeof config.languages] ||
  config.languages.es;
const common = config.common;
---

<footer class="bg-gray-900 text-white py-8 mt-12 print:hidden">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0 text-center md:text-left">
        <h3 class="text-xl font-bold mb-2">{t.site.title}</h3>
        <p class="text-gray-400 text-sm">
          Desarollado por Grimaldi Cuaical Gomez
        </p>
      </div>

      <div class="flex space-x-6 mb-4 md:mb-0">
        {
          Object.entries(common.social).map(([platform, url]) => (
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors capitalize"
            >
              {platform}
            </a>
          ))
        }
      </div>
    </div>

    <div
      class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500 text-sm"
    >
      &copy; {year}
      {t.site.title}. {
        lang === "es"
          ? "Todos los derechos reservados."
          : "All rights reserved."
      }
    </div>
  </div>
</footer>
